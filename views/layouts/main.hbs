<div class="container">
  {{#if productos.length}}
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
          </tr>
        </thead>
        <tbody>
          {{#each productos}}
            <tr>
              <td>{{title}}</td>
              <td>${{price}}</td>
              <td><img
                  src={{thumbnail}}
                  style="width: 3.5rem; height: 3.5rem"
                /></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="row mt-3">
      <h2 class="bg-dark text-light text-center p-2">No hay productos!</h2>
    </div>
  {{/if}}

  <div class="row">
    <a class="btn btn-dark mt-4" href="../../">Volver</a>
  </div>
</div>